<div class="container">
    {{#if alert }}
        {{#each alert }}
            <div class="alert alert-warning alert-dismissible fade show" id="Alert"role="alert">
                <strong>Error !</strong><span>{{this.msg}}</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {{/each}}
    {{/if}}
    {{#if exist}}
        <div id="exist"class="alert alert-danger" role="alert">
            <p>{{exist.msg}}</p>
            <button id="btn"type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {{/if}}
    <form id="form" class="form" action="/user/signup" method="POST">
        <h1>Sign Up</h1>
        <div class="f-control">
            <label for="firstname">Firstname</label>
            <input type="text" id="fstname" placeholder="Enter your Firstname..." autocomplete="off" name="firstname">
        </div>
        <div class="f-control">
            <label for="lastname">Lastname</label>
            <input type="text" id="lstname" placeholder="Enter your Lastname..." autocomplete="off" name="lastname">
        </div>
        <div class="f-control">
            <label for="email">Email</label>
            <input type="email" id="email" placeholder="Enter an email..." autocomplete="off" name="email">
        </div>
        <div class="f-control">
            <label for="password">Password</label>
            <input type="password" id="password" placeholder="Enter a password..." autocomplete="off" name="password">
        </div>
         <div class="f-control">
            <label for="contact">Contact number</label>
            <input type="number" id="contact" placeholder="Enter your Contact number..."  name="contact">
        </div>
        <button type="submit">Submit</button>
    </form>
</div>
<a href="/login&signup"><i class="fa fa-arrow-left" aria-hidden="true"></i> Go Back</a>
