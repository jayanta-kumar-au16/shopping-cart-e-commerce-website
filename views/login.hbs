<div class="head">
    <h4><strong>Welcome To</strong> <strong id="sign">Shopping-cart</strong></h4>
</div>
<div class="container2">
    {{#if alert }}
        {{#each alert }}
            <div class="alert alert-warning alert-dismissible fade show" id="Alert"role="alert">
                <strong>Error !</strong><span>{{this.msg}}</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {{/each}}
    {{/if}}
    <form id="form" class="form" action="/seller/login" method="POST">
        <h1>Seller Login</h1>
        <div class="f-control">
            <label for="email">Email</label>
            <input type="email" id="email" placeholder="Enter an email..." name="email" >
            <small>Error message</small>
        </div>
        <div class="f-control">
            <label for="password">Password</label>
            <input type="password" id="password" placeholder="Enter a password..." name="password">
            <small>Error message</small>
        </div>
        <button type="submit">Submit</button>
    </form>
    <a href="/seller/signup">Don't have account !! Click here</a>
</div>
{{#if Exist }}
    <div id="Exist"class="alert alert-danger" role="alert">
        <p>{{Exist.msg}}</p>
        <button id="btn"type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{{/if}}


<div class="container">
