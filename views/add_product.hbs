<div class="container">
    <h1 class="text-center display-8" id="hone">Add products</h1>
    <div class="d-flex justify-content-center align-items-center" id="inner">
        <form action="/seller/addproducts" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="name" class="form-label">Product name</label>
                <input type="text" name="product" class="form-control" id="name">
            </div>
            <div class="mb-3">
               <select name="category" class="form-select" aria-label="Default select example">
                    <option id="one" selected><strong>product Category</strong></option>
                    <option value="Home_Essentials">Home_Essentials</option>
                    <option value="Grocery">Grocery</option>
                    <option value="Electronics">Electronics</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="price" class="form-control" id="name">
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">image</label>
                <input class="form-control" type="file" name="image" id="image">
            </div>
            <div class="mb-3">
                <label for="quantity" class="form-label">Quantity</label>
                <input type="number" name="quantity" class="form-control" id="description">
            </div>
            <div class='mb-3'>
              <label for="description" class="form-label">description</label>
              <textarea class="form-control" name="description" minlength="50" maxlength="500"></textarea>
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
        </form>
    </div>
</div>